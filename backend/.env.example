# Copy this file to .env and fill in your actual values

# AI/ML API Keys
GROQ_API_KEY=your_groq_api_key_here
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
OPENAI_API_KEY=your_openai_api_key_here

# Security Settings (IMPORTANT: Change in production!)
SECRET_KEY=your_very_secure_random_secret_key_here

# Database Settings
DATABASE_URL=sqlite:///./contracts.db

# Application Settings
DEBUG=False
APP_ENV=production
HOST=0.0.0.0
PORT=8000

# File Upload Settings
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=10485760

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# OCR Settings  
TESSERACT_CMD=tesseract

# Contract Analysis Settings
CONTRACT_TEMPLATES_DIR=./data/templates
CLAUSES_DATA_PATH=./data/master_clauses_clean.csv

# Groq Model Settings
GROQ_MODEL=llama-3.1-8b-instant
GROQ_MAX_TOKENS=1024
GROQ_TEMPERATURE=0.1

# Risk Assessment Settings
RISK_THRESHOLD_HIGH=0.7
RISK_THRESHOLD_MEDIUM=0.4

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com